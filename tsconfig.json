{
  "compilerOptions": {
    // Output
    "outDir": "./dist/",
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    // Resolution
    "moduleResolution": "Node",
    "esModuleInterop": true,
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // Misc
    "skipLibCheck": true
  },
  "rootDir": "./src/",
  "include": ["src/**/*"]
}
